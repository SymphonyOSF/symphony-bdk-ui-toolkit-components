{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "rootDirs": [
      "stories"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": false
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "stories/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage"
  ],
  "jsx": "react"
}