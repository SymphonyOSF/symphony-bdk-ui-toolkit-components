{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "rootDirs": ["src", "stories"],
    "baseUrl": "src",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts", "spec/**/*.ts", "stories/**/*.ts"],
  "exclude": ["node_modules", "coverage"],
  "jsx": "react"
}
